<local:BasePage
    x:Class="GeographyQuiz.SummaryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GeographyQuiz"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SummaryPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="local:SummaryViewModel"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding SummaryList}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Foreground="{Binding SummaryTextColor}"
                        Text="{Binding SummaryText}"
                        HorizontalAlignment="Center"
                        TextWrapping="WrapWithOverflow" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</local:BasePage>
