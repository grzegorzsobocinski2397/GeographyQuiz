<local:BasePage
    x:Class="GeographyQuiz.CapitalsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GeographyQuiz"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="550"
    x:TypeArguments="local:CapitalsViewModel"
    mc:Ignorable="d">
    <Border Background="{StaticResource ButtonBackgroundBrush}">
        <Border Visibility="{Binding IsDifficultyUserControlVisible, Converter={local:BooleanToVisibilityConverter}}">
            <local:DifficultyUserControl />
        </Border>
        
    </Border>


</local:BasePage>
