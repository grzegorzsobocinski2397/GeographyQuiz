<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--  Fonts  -->
    <FontFamily x:Key="LatoRegular">pack://application;,,,,/Fonts/#Lato Regular</FontFamily>
    <FontFamily x:Key="LatoThin">pack://application;,,,,/Fonts/#Lato Thin</FontFamily>

    <!--  Default font for this application  -->
    <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="{StaticResource LatoRegular}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
    </Style>

    <!--  Font sizes  -->
    <system:Double x:Key="FontSizeLarge">40</system:Double>
    <system:Double x:Key="FontSizeSemiLarge">30</system:Double>
    <system:Double x:Key="FontSizeRegular">20</system:Double>
    <system:Double x:Key="FontSizeSmall">15</system:Double>
    <system:Double x:Key="FontSizeVerySmall">13</system:Double>
</ResourceDictionary>